@inherits Nancy.ViewEngines.Razor.NancyRazorViewBase
@{
    Layout = "/Shared/_LayoutEmpty.cshtml";
}
<form name="playerForm" class="pure-form pure-form-aligned" novalidate autocomplete="off">
    <fieldset>
        <legend>作业信息</legend>

        <div class="pure-control-group">
            <label>计划名称</label>
            <input type="text" name="sched_name" ng-model="detail.id" />
        </div>

        <div class="pure-control-group">
            <label>作业名称</label>
            <input type="text" name="job_name" ng-model="detail.job_name" />
        </div>

        <div class="pure-control-group">
            <label>作业组</label>
            <input type="text" name="job_group" ng-model="detail.job_group" />
        </div>

        <div class="pure-control-group">
            <label>外部程序集</label>
            <input type="text" name="outAssembly" ng-model="detail.outAssembly" />
        </div>

        <div class="pure-control-group">
            <label>调用类</label>
            <input type="text" name="job_class_name" ng-model="detail.job_class_name" />
        </div>

        <div class="pure-control-group">
            <label>是否可用</label>
            <input type="checkbox" name="is_durable" ng-model="detail.is_durable" />
        </div>

        <div class="pure-control-group">
            <label>描述</label>
            <input type="text" name="description" ng-model="detail.description" />
        </div>

        <div class="pure-control-group">
            <label>开始时间</label>
            <input type="text" name="startTime" ng-model="detail.startTime" />
        </div>

        <div class="pure-control-group">
            <label>结束时间</label>
            <input type="text" name="endTime" ng-model="detail.endTime" />
        </div>

        <div class="pure-control-group">
            <a href="#!/list" class="pure-button">返回</a>
        </div>
    </fieldset>

</form>
